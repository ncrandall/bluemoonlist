var status = '<%= @request.status %>'
// TODO: do this check in controller
if(status != $('#status').html())
{
	$('#status').html('<%= @request.status %>')
	$('#status').attr('class', '<%= status_text_class(@request) %>')
	$('#request_forms').html('<%= raw escape_javascript(render('request_forms', request: @request))%>')
  $('.status div').attr('class', 'circle <%= @request.status.to_s %>')
  $('.status small').html("<%= @request.status.to_s %>")
}