<% if request.status == :invoicing %>
	<%= form_for request, remote: true do |f| %>
		<%= f.hidden_field :status, value: "done" %>
		<%= f.submit "Send Payment", class: "btn btn-primary btn-large" %>
	<% end %>
<% end %>


<% if request.status == :working %>
	<%= form_for request, remote: true do |f| %>
		<%= f.hidden_field :status, value: "invoicing" %>
		<%= f.submit "Work Finished", class: "btn btn-success" %>
	<% end %>
<% end %>

<% if request.status == :paused %>
	<%= form_for request, remote: true do |f| %>
		<%= f.hidden_field :status, value: "active" %>
		<%= f.submit "Resume", class: "btn btn-success" %>
	<% end %>
<% end %>

<% if request.status == :active %>
	<%= form_for request, remote: true do |f| %>
		<%= f.hidden_field :status, value: "paused" %>
		<%= f.submit "Pause", class: "btn btn-warning" %>
	<% end %>
<% end %>

<% if request.status != :cancelled && request.status != :done %>
	<%= form_for request, remote: true do |f| %>
		<%= f.hidden_field :status, value: "cancelled" %>
		<%= f.submit "Cancel", class: "btn" %>
	<% end %>
<% end %>